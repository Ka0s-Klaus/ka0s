{
    "title": "Actions Performance",
    "description": "GitHub Actions Performance",
    "templates": [
        {
            "type": "summary",
            "dataSource": "data/kaos-workflows-runs.json",
            "metrics": [
                {
                    "name": "totalWorkflows",
                    "type": "count",
                    "title": "Total Workflows"
                },
                {
                    "name": "successRate",
                    "type": "rate",
                    "title": "Success Rate",
                    "numerator": {
                        "field": "conclusion",
                        "value": "success"
                    },
                    "denominator": "total",
                    "format": "percentage"
                },
                {
                    "name": "totalRuns",
                    "type": "count",
                    "title": "Total Runs"
                }
            ]
        },
        {
            "type": "list",
            "title": "Recent Executions",
            "dataSource": "data/kaos-workflows-runs.json",
            "columns": [
                "name",	
                "run_number",	
                "event",
                "status"
            ]
        },
        {
            "type": "graphic",
            "title": "Actions Performance",
            "dataSource": "data/kaos-workflows-runs.json",
            "statusField": "conclusion",
            "xAxisLabel": "NÂº de workflows",
            "yAxisLabel": "Tipo de Workflow",
            "categoryField": "name",
            "valueField": "run_number",
            "chartTypes": ["doughnut"]
        }
    ]
}