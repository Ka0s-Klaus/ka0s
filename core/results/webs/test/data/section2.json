{
    "title": "Backlogs",
    "description": "Estado y lista de workflows disponibles",
    "templates": [
        {
            "type": "summary",
            "dataSource": "data/kaos-workflows-available.json",
            "metrics": [
                {
                    "name": "totalItems",
                    "type": "count",
                    "title": "Total"
                },
                {
                    "name": "activeCount",
                    "type": "count",
                    "title": "Activos",
                    "filter": {
                        "field": "state",
                        "value": "active"
                    }
                },
                {
                    "name": "disabledCount",
                    "type": "count",
                    "title": "Desactivos",
                    "filter": {
                        "field": "state",
                        "value": "disabled_manually"
                    }
                },
                    {
                        "name": "activeRate",
                        "type": "rate",
                        "title": "Tasa de Activos",
                        "numerator": {
                            "field": "state",
                            "value": "active"
                        },
                        "denominator": "total",
                        "format": "percentage"
                    }
            ]
        },
        {
            "type": "table",
            "title": "Ka0s Modules",
            "dataSource": "data/kaos-workflows-available.json",
            "columns": [
                "id",
                "name",
                "state",
                "path"
            ]
        }
    ]
}