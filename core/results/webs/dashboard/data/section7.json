{
    "title": "End Workflow",
    "description": "Overview of workflow executions",

    "templates": [
        {
            "type": "summary",
            "dataSource": "data/kaos-workflows-runs.json",
            "metrics": [
                {
                    "name": "totalProjects",
                    "type": "count",
                    "title": "Total Projects"
                },
                {
                    "name": "successRate",
                    "type": "rate",
                    "title": "Success Completion Rate",
                    "numerator": {
                        "field": "conclusion",
                        "value": "success"
                    },
                    "denominator": "total",
                    "format": "percentage"
                }
            ]
        },
        {
            "type": "list",
            "title": "Workflow Executions",
            "dataSource": "data/kaos-workflows-runs.json",
            "columns": [
                "id",
                "name",
                "created_at",
                "updated_at",
                "conclusion"
            ]
        },
        {
            "type": "graphic",
            "title": "Resultado de Workflows",
            "dataSource": "data/kaos-workflows-runs.json",
            "statusField": "conclusion",
            "xAxisLabel": "Nombre",
            "yAxisLabel": "Run Number",
            "categoryField": "name",
            "valueField": "run_number",
            "chartTypes": ["doughnut"]
        }
    ]
}