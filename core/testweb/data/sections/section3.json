{
    "title": "Lead Time",
    "description": "Estado y lista de workflows disponibles",
    "templates": [
        {
            "type": "summary",
            "dataSource": "data/kaos-workflows-runs.json",
            "metrics": [
                {
                    "name": "totalItems",
                    "type": "count",
                    "title": "Total Workflows"
                },
                {
                    "name": "avgDuration",
                    "type": "avgTime",
                    "title": "Tiempo Promedio",
                    "format": "minutes"
                },
                {
                    "name": "maxDuration",
                    "type": "maxTime",
                    "title": "Tiempo MÃ¡ximo",
                    "format": "minutes"
                },
                {
                    "name": "disabledCount",
                    "type": "count",
                    "title": "Rama Principal",
                    "filter": {
                        "field": "head_branch",
                        "value": "main"
                    }
                }
            ]
        },
        {
            "type": "table",
            "title": "Ka0s Modules",
            "dataSource": "data/kaos-workflows-available.json",
            "columns": [
                "id",
                "name",
                "state"
            ]
        }
    ]
}